{
  "name": "goodscript",
  "version": "0.13.0",
  "description": "GoodScript compiler - TypeScript to native code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "bin": {
    "gsc": "./bin/gsc"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./types/runtime.d.ts"
    },
    "./globals": {
      "types": "./types/globals.d.ts"
    },
    "./compiler": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "types",
    "vendor",
    "runtime",
    "CLI.md",
    "README.md",
    "LICENSE-MIT",
    "LICENSE-APACHE"
  ],
  "keywords": [
    "goodscript",
    "typescript",
    "compiler",
    "native",
    "c++",
    "wasm",
    "webassembly",
    "transpiler",
    "cross-platform"
  ],
  "author": "GoodScript Contributors",
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcapolini/goodscript.git",
    "directory": "compiler"
  },
  "bugs": {
    "url": "https://github.com/fcapolini/goodscript/issues"
  },
  "homepage": "https://github.com/fcapolini/goodscript#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/gsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'lint not configured yet'",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "vitest": "^2.1.0"
  }
}
