{
  "name": "goodscript-monorepo",
  "version": "0.12.0",
  "private": true,
  "description": "GoodScript: TypeScript without the bad parts, compiled to native code",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "perf": "tsx performance/run-benchmark.ts",
    "perf:node": "tsx performance/run-benchmark.ts node",
    "perf:gc": "tsx performance/run-benchmark.ts gc",
    "perf:ownership": "tsx performance/run-benchmark.ts ownership"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
